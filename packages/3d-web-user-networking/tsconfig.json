{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2018",
    "jsx": "react",
    "lib": ["es2022", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "incremental": true,
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
