{
  "compilerOptions": {
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "incremental": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "es2022",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022",
    "types": [
      "node",
      "jest"
    ],
  },
  "include": ["src/**/*", "test/**/*", "./build.ts", "./jest.config.ts"]
}
