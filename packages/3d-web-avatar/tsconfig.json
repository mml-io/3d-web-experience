{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es2022",
    "jsx": "react-jsx",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "types": ["node", "jest"],
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "./build",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "./build.ts"],
  "exclude": ["**/build/*", "types-src"]
}
