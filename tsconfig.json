{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noEmit": true,
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.js",
    "packages/**/*.jsx",
    "packages/**/*.json"
  ]
}
